<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background" >
    
    <LinearLayout
        android:id="@+id/SubLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:baselineAligned="false"
        android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingTop="@dimen/activity_vertical_margin">
        
        
        
        <LinearLayout
            android:id="@+id/DistanceSubLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.79"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
        	
            <TextView
        		android:id="@+id/text_view_dist"
	        	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="@string/enter_dist"
        		android:textSize="@dimen/textsize"/>
            <EditText
        		android:id="@+id/edit_text_dist"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:hint="@string/distance">
    		</EditText>
            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/UnitSubLayout"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:gravity="center_horizontal"
        	android:layout_weight="1">
        	
            <TextView
        		android:id="@+id/text_view_unit"
	        	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="@string/enter_unit"
        		android:textSize="@dimen/textsize"/>
            <EditText
        		android:id="@+id/edit_text_unit"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:hint="@string/Unit">
    		</EditText>
            
        </LinearLayout>
        
        
    </LinearLayout>

	<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/fare"
        android:textSize="@dimen/textsize" 
        android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingTop="@dimen/activity_vertical_margin"/>

        <RadioButton
            android:id="@+id/auto_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/dist_button"
            android:layout_below="@+id/dist_button"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/auto" />

        <RadioButton
            android:id="@+id/taxi_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/auto_button"
            android:layout_alignLeft="@+id/unit_button"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/taxi" />

        <RadioButton
            android:id="@+id/day_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/auto_button"
            android:layout_below="@+id/auto_button"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/day" />

        <RadioButton
            android:id="@+id/night_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/day_button"
            android:layout_alignLeft="@+id/taxi_button"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/night" />

        <RadioButton
            android:id="@+id/unit_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/auto_button"
            android:layout_alignRight="@+id/SubLayout"
            android:layout_marginRight="18dp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/unit" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SubLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/calculate"
            android:textSize="20sp"
          	/>

        <RadioButton
            android:id="@+id/dist_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="38dp"
            android:layout_toLeftOf="@+id/button1"
            android:checked="true"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/dist" />

</RelativeLayout>